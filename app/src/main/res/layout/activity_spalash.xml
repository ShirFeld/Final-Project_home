<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:background="@color/back"
    tools:context=".Activities.SplashActivity">

    <ImageView
        android:id="@+id/lefthandid"
        android:layout_width="140dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="73dp"
        android:src="@drawable/leftpng" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="196dp"
        android:layout_height="251dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="261dp"
        android:layout_marginBottom="219dp"
        android:src="@drawable/heart1"
        android:visibility="gone">
    </ImageView>

    <ImageView
        android:id="@+id/righthandid"
        android:layout_width="140dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-14dp"
        android:layout_toRightOf="@+id/lefthandid"
        android:paddingBottom="23dp"
        android:src="@drawable/rightpng"></ImageView>

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:gravity="center"
        android:text="@string/app_name_after"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="italic" />
</RelativeLayout>